<!-- app/views/users/new.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Sign Up</h4>
        </div>
        <div class="card-body">
          <%= form_with model: @user, local: true, class: 'needs-validation', novalidate: true do |form| %>
            <div class="form-group mb-3">
              <%= form.label :username, class: 'form-label' %>
              <%= form.text_field :username, class: 'form-control', placeholder: 'Username', required: true %>
              <div class="invalid-feedback">
                Username can't be blank.
              </div>
            </div>

            <div class="form-group mb-3">
              <%= form.label :email, class: 'form-label' %>
              <%= form.email_field :email, class: 'form-control', placeholder: 'Email', required: true %>
              <div class="invalid-feedback">
                Please provide a valid email address.
              </div>
            </div>

            <div class="form-group mb-3">
              <%= form.label :password, class: 'form-label' %>
              <%= form.password_field :password, class: 'form-control', placeholder: 'Password', required: true %>
              <div class="invalid-feedback">
                Password can't be blank.
              </div>
            </div>

            <div class="form-group text-center">
              <%= form.submit 'Sign Up', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
      <p class="text-center mt-3">
        Already have an account? <%= link_to 'Sign In', new_session_path, class: 'text-primary' %>
      </p>
    </div>
  </div>
</div>
